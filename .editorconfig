root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4

[*.{xml,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.properties]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.test]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2
max_line_length = 80
